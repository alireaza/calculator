Build:
docker build --build-arg UID=$(id -u) --build-arg GID=$(id -g) --tag alireaza/calculator:$(date -u +%Y%m%d) --tag alireaza/calculator .

Run:
docker run \
--interactive \
--tty \
--rm \
--mount="type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix" \
--env="DISPLAY=$DISPLAY" \
--device="/dev/dri:/dev/dri" \
--env="NO_AT_BRIDGE=1" \
--name="calculator" \
alireaza/calculator
